{% from "govuk/components/button/macro.njk" import govukButton %}
{% extends 'layouts/page.njk' %}

{% block content %}
    <div class="govuk-grid-row" role="main">
      <div class="govuk-grid-column-two-thirds">
        <div class="govuk-panel govuk-panel--confirmation">
          <h1 class="govuk-panel__title">
            {{ panelTitle }}
          </h1>
          <div class="govuk-panel__body">
            The start date for this agreement is<br/>
            {{ agreement.payment.agreementStartDate | formatDate('d MMMM yyyy') }}
          </div>
        </div>
        <div class="govuk-panel__body">
          <p class="govuk-body">Your agreement number is {{ agreement.agreementNumber }}.</p>
          <p class="govuk-body">
            You can
            <a href="{{ buildUrl(baseUrl, agreement.agreementNumber) }}" class="govuk-link">
              view your agreement document
            </a>
            including the terms and conditions for the agreement.
          </p>
          <p class="govuk-body">
            Read the <a href="https://www.gov.uk/find-funding-for-land-or-farms" class="govuk-link" rel="noopener noreferrer" target="_blank">Farm payments information (opens in new tab)</a> to check what you must do to get paid for each of your selected actions.
          </p>
          {% if nearestQuarterlyPaymentDate %}
            <p class="govuk-body">You will receive your first payment for these actions in {{ nearestQuarterlyPaymentDate }}.</p>
          {% endif %}
        </div>

        {% include "partials/help/help.njk" %}
      </div>
    </div>
{% endblock %}
